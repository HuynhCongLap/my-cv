{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",               // ✅ Đổi từ "bundler" sang "node" để JSX & module hoạt động đúng
    "esModuleInterop": true,                  // ✅ Cho phép dùng default import từ CommonJS (như react-player)
    "allowSyntheticDefaultImports": true,     // ✅ Bắt buộc cho react-player
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/types"]
}
